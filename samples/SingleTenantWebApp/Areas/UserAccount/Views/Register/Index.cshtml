@model CIC.IdentityManager.Web.Areas.UserAccount.Models.RegisterInputModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form accept-charset="UTF-8" role="form" method="post">
            <div>
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
            </div>
            <fieldset>
                <div class="form-group">
                    <input class="form-control" placeholder="Username" name="username" type="text">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="E-Mail" name="email" type="text">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Confirm Password" name="confirmPassword" type="password" value="">
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Register">
            </fieldset>
        </form>
    </div>
</div>


<div class="row">
    <div class="col-md-4 col-md-offset-4">

        @using (Html.BeginForm("Confirm", "Register", FormMethod.Get))
        {
            <fieldset>
                <legend>Confirm</legend>
                <p>
                    <label for="id">Key</label>
                    <input id="id" name="id" />
                </p>
                <p><button class="btn btn-default">Submit</button></p>
            </fieldset>
        }

    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">

        @using (Html.BeginForm("Cancel", "Register", FormMethod.Get))
        {
            <fieldset>
                <legend>Cancel</legend>
                <p>
                    <label for="id">Key</label>
                    <input id="id" name="id" />
                </p>
                <p><button class="btn btn-default">Submit</button></p>
            </fieldset>
        }
    </div>
</div>