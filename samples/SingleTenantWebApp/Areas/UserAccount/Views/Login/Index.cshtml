@model BrockAllen.MembershipReboot.Mvc.Areas.UserAccount.Models.LoginInputModel
@{
    ViewBag.Title = "Login";
}

@if (User.Identity.IsAuthenticated)
{
    <p>
        You are already logged in as @User.Identity.Name but you
        tried to access a resource that you do not have permission
        for. Please login with an account that does have access
        or contact your administrator to grant you access.
    </p>
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please sign in</h3>
            </div>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form" method="post">
                    <div>
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                    </div>
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="E-mail or Username" name="username" type="text">
                        </div>
                        <div>
                            <a href="~/UserAccount/SendUsernameReminder">Forget your Username?</a>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="password" type="password" value="">
                        </div>
                        <div>
                            <a href="~/UserAccount/PasswordReset">Forget your Password?</a>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                            </label>
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                    </fieldset>
                </form>
            </div>
            <div class="panel-footer">
                <p>Or to use a client certificate to login click @Html.ActionLink("here", "CertificateLogin")</p>
            </div>
        </div>
    </div>
</div>

