@model BrockAllen.MembershipReboot.Mvc.Areas.UserAccount.Models.ChangePasswordInputModel
@{
    ViewBag.Title = "Change Password";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Change Pasword</h3>
            </div>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form" method="post">
                    <div>
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                    </div>
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="Old password" name="oldPassword" type="password" value="">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="New password" name="newPassword" type="password" value="">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="New password confirm" name="newPasswordConfirm" type="password" value="">
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Change Password">
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

