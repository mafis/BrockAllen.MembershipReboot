@model CIC.IdentityManager.Web.Areas.UserAccount.Models.ChangeEmailRequestInputModel
@{
    ViewBag.Title = "Change Email";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form" method="post">
                    <div>
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                    </div>
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="New email" name="newEmail" type="text" value="">
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="@ViewBag.Title">
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Confirm</h3>
            </div>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form" action="~/UserAccount/ChangeEmail/Confirm" method="get">
                    <div>
                        @Html.ValidationSummary()
                                    @Html.AntiForgeryToken()
                                            </div>
                                            <fieldset>
                                                <div class="form-group">
                                                    <input class="form-control" placeholder="Key" name="id" type="text" value="">
                                                </div>
                                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Submit">
                                            </fieldset>
                                        </form>
            </div>
        </div>
    </div>
</div>
