@model CIC.IdentityManager.Web.Areas.UserAccount.Models.PasswordResetInputModel
@{
    ViewBag.Title = "Reset Password";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary("Please correct the following errors")
    @Html.AntiForgeryToken()

    <fieldset class="editor small">
        <legend>@ViewBag.Title</legend>

        @Html.EditorForModel()

        <div >
            <button class="btn btn-default">Submit</button>
        </div>

    </fieldset>
}

@using (Html.BeginForm("Confirm", "PasswordReset", FormMethod.Get))
{
    <fieldset>
        <legend>Confirm</legend>
        <p>
            <label for="id">Key</label>
            <input id="id" name="id" />
        </p>
        <p ><button class="btn btn-default">Submit</button></p>
    </fieldset>
}
