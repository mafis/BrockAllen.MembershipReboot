@model CIC.IdentityManager.Web.Areas.UserAccount.Models.ChangeMobileRequestInputModel

@{
    ViewBag.Title = "Change Mobile Phone Number";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form" method="post">
                    <div>
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                    </div>
                    <p>Current Mobile: @Model.Current</p>
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="New mobile phone number" name="newMobilePhone" type="text" value="">
                        </div>

                        <button class="btn btn-lg btn-success btn-block"  name="button" value="change">Change Mobile Phone Number</button>
                        <button class="btn btn-lg btn-danger btn-block" name="button" value="remove" class="disable">Remove Mobile Phone Number</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form" action="~/UserAccount/ChangeMobile/Confirm" method="post">
                    <div>
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                    </div>
                    <p>Current Mobile: @Model.Current</p>
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="Code" name="code" type="text" value="">
                        </div>

                        <button class="btn btn-lg btn-default btn-block">Submit</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

